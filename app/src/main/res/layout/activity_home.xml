<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI Analyzer"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:textAlignment="center"
        "/>

    <TextView
        android:id="@+id/home_tv1_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Mohammed"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/home_tv2_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/home_et_status"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="text"
        android:layout_margin="20dp"
        android:layout_marginTop="0dp"

        android:hint="Normal (still good)"
        />

    <TextView
        android:id="@+id/home_et_oldStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Status"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_rv_oldStatus"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/home_btn_addFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADD FOOD"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <Button
            android:id="@+id/home_btn_addFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADD RECORD"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:padding="10dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/home_btn_viewFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="VIEW FOOD"
        android:textSize="20sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/blue"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/home_tv3_logout"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="logout"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="62dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"/>


</LinearLayout>